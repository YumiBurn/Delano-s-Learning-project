package model;

public class Sequence2 {
public static String getSequence(int ft, int d, int n) {
	String result= "";
	int term =ft;
	result+=  "<";
	int sum=0;
	int i=1;
	while(i <=n) {
	result +=term;
	if (i  <n) { // not the last term
result += ",";		
	}
	sum +=term;
	term +=d;
	}
	result += ">'";	
	result += " has averrage " + ((double)sum /n);
	 i++;
	return result;
	
}
}
