package Console_apps;

import java.util.Scanner;
/// this is example is gonna fix grade calcuator app 1 by using for loops and while loops

public class GradeCalculatorApp1b{
public static void main(String[] args) {
	
	Scanner input= new Scanner(System.in);
	
// this program calcuates the weighted sum of 5 assignments, each may come with a different weight.
	/* 
	 * Assignment 1 is 20% and has 50 marks associated with it 
	 * assignment 2 has (40%)  attached to it with 70 marks
	 */
	System.out.println("Please enter your name");
	String name = input.nextLine();
	
	for(int i =1 ;i<=5; i++ ) {
		
	}
	/**prompt for assingment 1 **/
	
	System.out.println(name + " what is the weight of your first assignment? ");
	int weight1= input.nextInt();
	System.out.println(" What is the mark of this assignment ? " + name);
	int mark1= input.nextInt();
/**prompt for assingment 1 **/
	
	System.out.println(name + " what is the weight of your second assignment? ");
	int weight2= input.nextInt();
	System.out.println(" What is the mark of this assignment ? " + name);
	int mark2= input.nextInt();
/**prompt for assingment 1 **/
	
	System.out.println(name + " what is the weight of your 3rd assignment? ");
	int weight3= input.nextInt();
	System.out.println(" What is the mark of this assignment ? " + name);
	int mark3= input.nextInt();
/**prompt for assingment 1 **/
	
	System.out.println(name +"what is the weight of your forth assignment? ");
	int weight4= input.nextInt();
	System.out.println("What is the mark of this assignment ? " + name);
	int mark4= input.nextInt();
/**prompt for assingment 1 **/
	
	System.out.println(name + "what is the weight of your fifth assignment? ");
	int weight5= input.nextInt();
	System.out.println("What is the mark of this assignment ? " + name);
	int mark5= input.nextInt();
	
	
	/** lets do the weighted sum */
	
	double weightedSum = 
	mark1 *(weight1/100.0) + 
	mark2 *(weight2/100.0)+
	mark3 *(weight3/100.0)+
	mark4*(weight4/100.0) +
	mark5 *(weight5/100.0) ;
	
	System.out.println("Assignment 1 [" + mark1 + ", weight1 " +weight1 + "%]" );
	System.out.println("Assignment 2[" + mark2 + ", weight1 " +weight2 +"%]" );
	System.out.println("Assignment 3[" + mark3+ ", weight1 " + weight3+ "%]" );
	System.out.println("Assignment 4 [" + mark4 + ", weight1 " +weight4 +  "%]" );
	System.out.println("Assignment 5[" + mark5+ ", weight1 " +weight5+  "%]" );
	System.out.println("Weighted sum : " +weightedSum  );
	
	input.close();
	
	
}
}
