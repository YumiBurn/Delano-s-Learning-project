package model;

public class Sequence {
public static String getSequence(int ft, int d, int n) {
	String result= "";
	int term =ft;
	result+=  "<";
	int sum=0;
	
	for(int i=1; i <=n; i++) {
	result +=term;
	if (i  <n) { // not the last term
result += ",";		
	}
    result += ",";
		
	}
	result += ">'";	
	
	return result;
	
}
}
