package console_apps;
import java.util.Scanner;

import model.Sequence;
import model.Sequence2;

public class SequenceApp1 {
	
public static void main(String[] args ) {
	Scanner input = new Scanner(System.in);
	
	System.out.println("Enter the first term of the arithmetic sequence please");
	int ft = input.nextInt();
	
	System.out.println("Please enter the common different of the sequence");
	int d = input.nextInt();;
	
	
	System.out.println("Enter the size of the sequence please");
	int n= input.nextInt();
	
	String result = Sequence2.getSequence(ft, d, n);
	System.out.println(result);
	input.close();
	
	
}
}
